<% layout("/layouts/other_boilerplate") %>
<body class="bg-light">
  <div class="container mt-5 p-5 bg-white shadow rounded text-center">
    <h1 class="mb-4">Welcome to Hourlier</h1>
    <p class="mb-5">Choose how you want to join our platform</p>

    <div class="row justify-content-center">
      <!-- Sign Up as User -->
      <div class="col-md-4 mb-3">
        <div class="card shadow-sm h-100">
          <div class="card-body d-flex flex-column">
            <h3 class="card-title">Sign Up as User</h3>
            <p class="flex-grow-1">Find and hire skilled HOURLIERS for your tasks.</p>
            <a href="/signup-user" class="btn btn-primary mt-auto">Get Started</a>
          </div>
        </div>
      </div>

      <!-- Sign Up as HOURLIER -->
      <div class="col-md-4 mb-3">
        <div class="card shadow-sm h-100">
          <div class="card-body d-flex flex-column">
            <h3 class="card-title">Sign Up as HOURLIER</h3>
            <p class="flex-grow-1">Offer your skills and get paid hourly.</p>
            <a href="/signup-hourlier" class="btn btn-success mt-auto">Apply Now</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
