<% layout("/layouts/other_boilerplate") %>

<div class="signup-wrapper d-flex justify-content-center align-items-center">
  <div class="card signup-card p-5">
    <h2 class="text-center mb-4 fw-bold">Login</h2>

    <form action="/login" method="POST" class="w-100">
      <div class="mb-3">
        <label class="form-label fw-semibold">Email</label>
        <input type="email" class="form-control" name="email" placeholder="you@example.com" required>
      </div>

      <div class="mb-4">
        <label class="form-label fw-semibold">Password</label>
        <input type="password" class="form-control" name="password" placeholder="********" required>
      </div>

      <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold">Login</button>
    </form>

    <p class="text-center mt-3">
      Don't have an account? <a href="/signup-user" class="text-decoration-none fw-semibold">Sign Up</a>
    </p>
  </div>
</div>

<style>
  .signup-wrapper {
    min-height: calc(100vh - 80px);
    background: linear-gradient(135deg, #4e73df, #1cc88a);
    padding: 40px;
  }
  .signup-card {
    width: 100%;
    max-width: 600px;
    min-height: 400px;
    border: none;
    border-radius: 20px;
    box-shadow: 0 10px 25px rgba(0,0,0,0.2);
    background: #fff;
  }
  .form-control:focus {
    box-shadow: none;
    border-color: #4e73df;
  }
</style>
